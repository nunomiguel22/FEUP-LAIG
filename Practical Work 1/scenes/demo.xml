<lxs>
    <scene root="scene" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="pitch" file="scenes/images/footballpitch.jpg" />
        <texture id="ball" file="scenes/images/football.jpg" />
        <texture id="cement" file="scenes/images/cement.jpg" />
        <texture id="track" file="scenes/images/track.jpg" />
        <texture id="advert" file="scenes/images/feuplogo.jpg" />
    </textures>

    <materials>
        <material id="postMat" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.9" g="0.9" b="0.9" a="1.0" />
            <diffuse r="0.9" g="0.9" b="0.9" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <material id="defaultMat" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>

        <material id="grassMat" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.6" g="0.9" b="0.6" a="1.0" />
            <diffuse r="0.6" g="0.9" b="0.6" a="1.0" />
            <specular r="0.1" g="0.2" b="0.1" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>        
        <primitive id="square">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>

        <primitive id="pitchRectangle">
            <rectangle x1="-15" y1="-10" x2="15" y2="10" />
        </primitive>

        <primitive id="goalpostCylinder">
            <cylinder base="0.1" top="0.1" height="1" slices="12" stacks="12" />
        </primitive>

        <primitive id="crossbarCylinder">
            <cylinder base="0.1" top="0.1" height="2" slices="12" stacks="12" />
        </primitive>

        <primitive id="ballSphere">
            <sphere radius="0.2" slices="18" stacks="9" />
        </primitive>

        <primitive id="advertRectangle">
            <rectangle x1="-1.5" y1="0.0" x2="1.5" y2="0.5" />
        </primitive>

        <primitive id="cementTorus">
            <torus inner="3.5" outer="17.3" slices="2" loops="40" />
        </primitive>

        <primitive id="trackTorus">
            <torus inner="6" outer="26.8" slices="2" loops="40" />
        </primitive>

        <primitive id="cornerCylinder">
            <cylinder base="0.05" top="0.05" height="1" slices="12" stacks="12" />
        </primitive>

        <primitive id="cornerTriangle">
            <triangle x1="0" y1="1.0" x2="0" y2="1.5" x3="0.5" y3="1.25" />
        </primitive>
    </primitives>

     <components>
      <!-- bench -->
        <component id="cubeFace1">
            <transformation>
                <translate x="0" y="0" z="-1" />
                <rotate axis="y" angle="180"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cubeFace2">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cubeFace3">
            <transformation>
                <translate x="1" y="0" z="0" />
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cubeFace4">
            <transformation>
                <translate x="-1" y="0" z="0" />
                <rotate axis="y" angle="270"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cubeFace5">
            <transformation>
                <translate x="0" y="1" z="0" />
                <rotate axis="x" angle="270"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cubeFace6">
            <transformation>
                <translate x="0" y="-1" z="0" />
                <rotate axis="x" angle="45"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cube">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <componentref id="cubeFace1" />
                <componentref id="cubeFace2" />
                <componentref id="cubeFace3" />
                <componentref id="cubeFace4" />
                <componentref id="cubeFace5" />
                <componentref id="cubeFace6" />
            </children>
        </component>

        <component id="leftBench">
            <transformation>
                <translate x="5" y="0.5" z="-11" />
                <scale x="1" y="0.5" z="0.5"/>
            </transformation>
            <materials>
                <material id="postMat" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="cube" />
            </children>
        </component>

        <component id="rightBench">
            <transformation>
                <translate x="-5" y="0.5" z="-11" />
                <scale x="1" y="0.5" z="0.5"/>
            </transformation>
            <materials>
                <material id="postMat" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="cube" />
            </children>
        </component>
        <!-- End bench -->

        <!-- Corner flag -->
        <component id="cornerTube">
            <transformation>
                <translate x="0" y="0.1" z="0" />
                <rotate axis="x" angle="270"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="cornerCylinder" />
            </children>
        </component>

        <component id="cornerFlag">
            <transformation>
                <rotate axis="y" angle="45"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <primitiveref id="cornerTriangle" />
            </children>
        </component>

        <component id="bottomLeftCornerFlag">
            <transformation>
                <translate x="-15" y="0.0" z="10.0" />
                <rotate axis="y" angle="45"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="cornerTube" />
                <componentref id="cornerFlag" />
            </children>
        </component>

        <component id="bottomRightCornerFlag">
            <transformation>
                <translate x="15" y="0.0" z="10.0" />
                <rotate axis="y" angle="45"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="cornerTube" />
                <componentref id="cornerFlag" />
            </children>
        </component>

        <component id="topLeftCornerFlag">
            <transformation>
                <translate x="-15" y="0.0" z="-10.0" />
                <rotate axis="y" angle="45"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="cornerTube" />
                <componentref id="cornerFlag" />
            </children>
        </component>

        <component id="topRightCornerFlag">
            <transformation>
                <translate x="15" y="0.0" z="-10.0" />
                <rotate axis="y" angle="45"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="cornerTube" />
                <componentref id="cornerFlag" />
            </children>
        </component>
        <!-- End Corner flag -->

          <!-- Pitch -->
        <component id="footballPitch">
            <transformation>
                <rotate axis="x" angle="270"/>
            </transformation>
            <materials>
                <material id="grassMat" />
                <material id="postMat" />
            </materials>
            <texture id="pitch" length_s="1" length_t="1" />
            <children>
                <primitiveref id="pitchRectangle" />
            </children>
        </component>
        <!-- End Pitch -->

        <!-- Goals -->
        <component id="leftGoalpost">
            <transformation>
                <translate x="0" y="0" z="1" />
                <rotate axis="x" angle="270"/> 
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="0" length_t="0" />
            <children>
                <primitiveref id="goalpostCylinder" />
            </children>
        </component>

        <component id="rightGoalpost">
            <transformation>
                <translate x="0" y="0" z="-1" /> 
                <rotate axis="x" angle="270"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="0" length_t="0" />
            <children>
                <primitiveref id="goalpostCylinder" />
            </children>
        </component>

        <component id="crossbar">
            <transformation>
                <translate x="0" y="1" z="-1" /> 
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="0" length_t="0" />
            <children>
                <primitiveref id="crossbarCylinder" />
            </children>
        </component>

        <component id="southGoal">
            <transformation>
                <translate x="-14.9" y="0" z="0" /> 
            </transformation>
            <materials>
                <material id="postMat" />
            </materials>
            <texture id="none" length_s="0" length_t="0" />
            <children>
                <componentref id="leftGoalpost" />
                <componentref id="rightGoalpost" />
                <componentref id="crossbar" />
            </children>
        </component>

        <component id="northGoal">
            <transformation>
                <translate x="14.9" y="0" z="0" /> 
            </transformation>
            <materials>
                <material id="postMat" />
            </materials>
            <texture id="none" length_s="0" length_t="0" />
            <children>
                <componentref id="leftGoalpost" />
                <componentref id="rightGoalpost" />
                <componentref id="crossbar" />
            </children>
        </component>
        <!-- End Goals -->

        <!-- Ball -->
        <component id="football">
            <transformation>
                <translate x="0" y="0.2" z="0" /> 
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="ball" length_s="1" length_t="1" />
            <children>
                <primitiveref id="ballSphere" />
            </children>
        </component>
        <!-- End Ball -->

          <!-- adverts -->
        <component id="advert1">
            <transformation>
                <translate x="-3" y="0" z="0" /> 
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="advertRectangle" />
            </children>
        </component>

        <component id="advert2">
            <transformation>
                <translate x="3" y="0" z="0" /> 
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="advertRectangle" />
            </children>
        </component>

        <component id="advert3">
            <transformation>
                <translate x="-6" y="0" z="0" /> 
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="advertRectangle" />
            </children>
        </component>

        <component id="advert4">
            <transformation>
                <translate x="6" y="0" z="0" /> 
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="advertRectangle" />
            </children>
        </component>

        <component id="leftAdvertPanel">
            <transformation>
                <translate x="0" y="0" z="-10" /> 
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="advert" length_s="1" length_t="1" />
            <children>
                <componentref id="advert1" />
                <componentref id="advert2" />
                <componentref id="advert3" />
                <componentref id="advert4" />
                <primitiveref id="advertRectangle" />
            </children>
        </component>
        
        <component id="rightAdvertPanel">
            <transformation>
                <rotate axis="y" angle="180"/>
                <translate x="0" y="0" z="-10" /> 
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="advert" length_s="1" length_t="1" />
            <children>
                <componentref id="advert1" />
                <componentref id="advert2" />
                <componentref id="advert3" />
                <componentref id="advert4" />
                <primitiveref id="advertRectangle" />
            </children>
        </component>
        <!-- End adverts -->

        <!-- Football field composite -->
        <component id="footballFieldComposite">
            <transformation>
                <translate x="0" y="0.1" z="0" /> 
            </transformation>
            <materials>
                <material id="defaultMat" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="footballPitch" />
                <componentref id="southGoal" />
                <componentref id="northGoal" />
                <componentref id="football" />
                <componentref id="leftAdvertPanel" />
                <componentref id="rightAdvertPanel" />
                <componentref id="leftBench" />
                <componentref id="rightBench" />
                <componentref id="bottomLeftCornerFlag" />
                <componentref id="bottomRightCornerFlag" />
                <componentref id="topLeftCornerFlag" />
                <componentref id="topRightCornerFlag" />
            </children>
        </component>
        <!-- End Football field composite -->

        <!-- Cement outer layer -->
        <component id="cementLayer">
            <transformation>
                <scale x="1" y="1" z="0.7"/>
                <rotate axis="x" angle="270"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="cement" length_s="1" length_t="1" />
            <children>
                <primitiveref id="cementTorus" />
            </children>
        </component>
        <!-- End cement outer layer -->

        <!-- Track outer layer -->
        <component id="trackLayer">
            <transformation>
                <scale x="1" y="1" z="0.7"/>
                <rotate axis="x" angle="270"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="track" length_s="1" length_t="1" />
            <children>
                <primitiveref id="trackTorus" />
            </children>
        </component>
        <!-- Track outer layer -->

        <!-- Outer layer composite -->
        <component id="outerLayerComposite">
            <transformation>
            </transformation>
            <materials>
                <material id="defaultMat" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="trackLayer" />
                <componentref id="cementLayer" />
            </children>
        </component>
        <!-- Track outer layer -->

        <!-- Scene -->
        <component id="scene">
            <transformation>
            </transformation>
            <materials>
                <material id="defaultMat" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="outerLayerComposite" />
                <componentref id="footballFieldComposite" />
            </children>
        </component>
        <!-- End Scene -->
      
    </components>
    
</lxs>
