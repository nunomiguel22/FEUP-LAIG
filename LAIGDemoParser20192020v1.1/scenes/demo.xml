<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="bank" file="scenes/images/bank.jpg" />
        <texture id="leaves" file="scenes/images/leaves.jpg" />
        <texture id="rocks" file="scenes/images/rocks.jpg" />
        <texture id="trunk" file="scenes/images/trunk-image.jpg" />
        <texture id="vidral" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoTriangle">
            <triangle x1="-1" y1="0" 
                      x2="1" y2="0" 
                      x3="0" y3="1" />
        </primitive>

        <primitive id="demoRectangle">
            <rectangle x1="10" y1="0" x2="10" y2="0" />
        </primitive>

        <primitive id="demoCylinder">
            <cylinder base="1" top="1" height="3" slices="30" stacks="30" />
        </primitive>

        <primitive id="demoSphere">
            <sphere radius="2" slices="18" stacks="9" />
        </primitive>

        <primitive id="demoTorus">
            <torus inner="1" outer="2" slices="16" loops="12" />
        </primitive>

    </primitives>

    <components>

        <component id="wall">
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="leaves" length_s="256" length_t="256" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="wall2">
         <transformation>
                <rotate axis="xz" angle="180" />
                <rotate axis="x" angle="90" />       
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="wall" />
            </children>
        </component>

        <component id="floor">
         <transformation>
                <rotate axis="yz" angle="180" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="wall" />
            </children>
        </component>

        <component id="trunk_center">
        <transformation>
                <translate x="5" y="0" z="5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="trunk"/>
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>

        <component id="trunk_torus">
        <transformation>
                <translate x="5" y="5" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="trunk"/>
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>

        <component id="trunk_wall">
        <transformation>
                <rotate axis="yz" angle="180" />
                <translate x="-0.4" y="11" z="0" />
                <rotate axis="-xz" angle="180" />
                <rotate axis="y" angle="180" />
                <translate x="5" y="5" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="trunk_torus" />
            </children>
        </component>

         <component id="arm">
        <transformation>
                <translate x="0.5" y="5" z="5.1" />
                <rotate axis="x" angle="90" />
            </transformation>
             <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="vidral"/>
            <children>
                <primitiveref id="demoTriangle" />
            </children>
        </component>

        <component id="arm2">
        <transformation>
                <translate x="0.5" y="5" z="6.3" />
                <rotate axis="x" angle="90" />
            </transformation>
             <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="arm" />
            </children>
        </component>

    </components>
</lxs>
