<lxs>
    <scene root="scene" axis_length="5"/>

    <views default="sideline camera">
        <perspective id="sideline camera" near="0.1" far="500" angle="45">
            <from x="0" y="100" z="20" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="0.0" y="10.0" z="1.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0.6" linear="0" quadratic="0" />  
        </omni>
    </lights>

    <textures>
    
    </textures>

    <materials>
        <material id="defaultMat" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <animations>

    </animations>

    <primitives>        
        <primitive id="square">
            <rectangle x1="-100" y1="-100" x2="-50" y2="-50" />
        </primitive>

    </primitives>

     <components>
   

        <!-- Scene -->
        <component id="scene">
            <transformation>
            </transformation>
            <materials>
                <material id="defaultMat" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        <!-- End Scene -->
      
    </components>
    
</lxs>
